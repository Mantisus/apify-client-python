[flake8]
filename=
    ./.github/*.py,
    ./docs/*.py,
    ./src/*.py,
    ./test/*.py,
    ./setup.py
max_line_length = 150
# Google docstring convention + D204 & D401
docstring-convention=all
ignore=
    D100
    D104
    D203
    D213
    D215
    D406
    D407
    D408
    D409
    D413
per-file-ignores =
    .github/*: D
    docs/*: D
    tests/*: D
